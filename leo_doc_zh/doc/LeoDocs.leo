        return val in (None,True)

    # g.trace(timeStamp, timeStamp2)
    message = '@auto %s\n%s\n%s' % (
        fileName,
        g.tr('already exists.'),
        g.tr('Overwrite this file?'))

    ok = g.app.gui.runAskYesNoCancelDialog(c,
        title = 'Overwrite existing file?',
        message = message)

    return ok == 'yes'
